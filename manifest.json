{
  "author": "Emil Kovacev",
  "name": "Site Blocker",
  "description": "Blocks user from being able to log into specified sites",
  "version": "1.0",
  "manifest_version": 3,

  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "waluigi.png",
    "48": "waluigi.png",
    "128": "waluigi.png"
  },

  "permissions": [
    "storage",
    "webNavigation",
    "webRequest",
    "management"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "offline_enabled": true
}
